
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/LayoutLogin/Index.cshtml";
}

<div class="container">
    <div class="col-md-12 content-center">
        <div class="card-plain">
            <form class="form" method="" action="">
                <div class="header">
                    <div class="logo-container">
                        <img src="~/images/logo.svg" alt="">
                    </div>
                    <h5>Giriş Yap</h5>
                </div>
                <div class="content">
                    <div class="input-group input-lg">
                        <input type="text" class="form-control" placeholder="Kullanıcı Adı">
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-account-circle"></i>
                        </span>
                    </div>
                    <div class="input-group input-lg">
                        <input type="password" placeholder="Şifre" class="form-control" />
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-lock"></i>
                        </span>
                    </div>
                </div>
                <div class="footer text-center">
                    <a href="#" class="btn l-cyan btn-round btn-lg btn-block waves-effect waves-light">GİRİŞ YAP</a>
                    <h6 class="m-t-20"><a href="#" class="link">Şifrenizi mi unuttunuz?</a></h6>
                </div>
            </form>
        </div>
    </div>
</div>

