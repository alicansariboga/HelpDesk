@model List<ResultTicketDto>

@{
    ViewData["T nitle"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}
<section class="content home">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Taleplerim
                    <small class="text-muted">Welcome to Compass</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Talepler</a></li>
                    <li class="breadcrumb-item active">Geçmiş Taleplerim</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Bütün</strong> Taleplerim</h2>
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                                <ul class="dropdown-menu dropdown-menu-right slideUp">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else</a></li>
                                </ul>
                            </li>
                            <li class="remove">
                                <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="body table-responsive members_profiles">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width:60px;">#</th>
                                    <th>Numara</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Tarih</th>
                                    <th>Durumu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var theMessage = string.Join(" ", item.Message.Split(' ').Take(15));
                                    var msgShort = theMessage + (item.Message.Split(' ').Length > 15 ? "..." : "");

                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><a href="#">@item.Id</a></td>
                                        <td><a href="#">@item.Title</a></td>
                                        <td><a href="#">@msgShort</a></td>
                                        <td>@item.CreatedTime</td>
                                        @if (item.Status == 1)
                                        {
                                            <td><span class="badge badge-light">Önemli Değil</span></td>
                                        }
                                        @if (item.Status == 2)
                                        {
                                            <td><span class="badge badge-primary">Az Önemli</span></td>
                                        }
                                        @if (item.Status == 3)
                                        {
                                            <td><span class="badge badge-success">Normal</span></td>
                                        }
                                        @if (item.Status == 4)
                                        {
                                            <td><span class="badge badge-Warning">Önemli</span></td>
                                        }
                                        @if (item.Status == 5)
                                        {
                                            <td><span class="badge badge-danger">Çok Önemli</span></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="/Ticket/Create/" class="btn btn-warning"> Yeni Talep Oluştur</a>
            </div>
        </div>
        <!-- #END# Hover Rows -->
    </div>
</section>


