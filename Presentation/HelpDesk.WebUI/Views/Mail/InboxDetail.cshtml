@model ResulltMailDto

@{
    ViewData["Title"] = "InboxDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<section class="content inbox">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Maili Görüntüle
                    <small class="text-muted">HelpDesk</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> HelpDesk</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Gelen Kutusu</a></li>
                    <li class="breadcrumb-item active">Görüntüle</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card action_bar">
                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-lg-1 col-md-2 col-3">
                                <div class="checkbox inlineblock delete_all">
                                    <input id="deleteall" type="checkbox">
                                    <label for="deleteall">
                                        Hepsi
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-4 col-6">
                                <div class="input-group search">
                                    <input type="text" class="form-control" placeholder="Arama...">
                                    <span class="input-group-addon">
                                        <i class="zmdi zmdi-search"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-3">
                                <div class="btn-group hidden-sm-down">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-simple btn-info dropdown-toggle btn-round" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="zmdi zmdi-label"></i>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right slideDown">
                                            <li>
                                                <a href="javascript:void(0);">Aile</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);">İş</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);">Google</a>
                                            </li>
                                            <li role="separator" class="divider"></li>
                                            <li>
                                                <a href="javascript:void(0);">Etiket Oluştur</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="btn-group hidden-md-down hidden-sm-down">
                                    <button type="button" class="btn btn-simple btn-info dropdown-toggle btn-round" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-folder"></i> <span class="caret"></span> </button>
                                    <ul class="dropdown-menu dropdown-menu-right slideDown">
                                        <li><a href="javascript:void(0);">Önemli</a></li>
                                        <li><a href="javascript:void(0);">Sosyal</a></li>
                                        <li><a href="javascript:void(0);">Banka İşlemleri</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="javascript:void(0);">Klasör Oluştur</a></li>
                                    </ul>
                                </div>
                                <div class="btn-group hidden-sm-down">
                                    <button type="button" class="btn btn-simple btn-warning dropdown-toggle btn-round" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Daha Fazlası<span class="caret"></span> </button>
                                    <ul class="dropdown-menu dropdown-menu-right slideDown">
                                        <li><a href="javascript:void(0);">Okunmamış</a></li>
                                        <li><a href="javascript:void(0);">Gereksiz</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="javascript:void(0);">Sessize Al</a></li>
                                    </ul>
                                </div>
                                <button type="button" class="btn btn-success btn-icon btn-icon-mini btn-round hidden-sm-down">
                                    <i class="zmdi zmdi-plus-circle"></i>
                                </button>
                                <button type="button" class="btn btn-default btn-icon btn-simple btn-icon-mini btn-round hidden-sm-down">
                                    <i class="zmdi zmdi-archive"></i>
                                </button>
                                <button type="button" class="btn btn-icon btn-simple btn-icon-mini btn-round btn-danger">
                                    <i class="zmdi zmdi-delete"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="m-t-0 m-b-20">@Model.Title</h4>
                                <hr>
                                <div class="media">
                                    <div class="float-left">
                                        <div class="m-r-20"> <img class="rounded" src="~/images/xs/avatar7.jpg" width="60" alt=""> </div>
                                    </div>
                                    <div class="media-body">
                                        <p class="m-b-0">
                                            <strong class="text-muted m-r-5">Kimden:</strong>Ben
                                            <a href="javascript:void(0);" class="text-default"> (@Model.Sender)</a>
                                            @{
                                                var datePart = Model.CreatedTime.ToString("yyyy-MM-dd");
                                                var timePart = Model.CreatedTime.ToString("HH:mm:ss");
                                            }
                                            <span class="text-muted text-sm float-right">@timePart, @datePart</span>
                                        </p>
                                        <p class="m-b-0">
                                            <strong class="text-muted m-r-10">Kime:</strong>@Model.Receiver
                                            <small class="text-muted float-right"><i class="zmdi zmdi-attachment m-r-5"></i>(2 files, 89.2 KB)</small>
                                        </p>
                                        <p class="m-b-0">
                                            <strong class="text-muted m-r-10">CC:</strong><a href="javascript:void(0);">@Model.Receiver</a>, <a href="javascript:void(0);">@Model.Receiver</a>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                            </div>
                            <div class="col-md-12">
                                <p>@Model.Message</p>
                            </div>
                            <div class="col-md-12">
                                <span><img src="~/images/image2.jpg" class="img-thumbnail m-t-10" width="250" alt=""></span>
                                <span><img src="~/images/image3.jpg" class="img-thumbnail m-t-10" width="250" alt=""></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="body">
                        <strong>Buradan</strong> <a href="#">Cevapla</a> veya <a href="#">İlet</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

